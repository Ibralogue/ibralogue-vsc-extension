{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Ibralogue",

  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#globalVariables"
    },
    {
      "include": "#choices"
    }
  ],

  "repository": {
    "comments": {
      "name": "comment.line.ibralogue",
      "match": "^#.*$"
    },
    "functions": {
      "patterns": [
        {
          "include": "#reserved"
        }
      ]
    },
    "reserved": {
      "patterns": [
        {
          "name": "storage.modifier.ibralogue",
          "match": "\\b(DialogueName|DialogueEnd)\\b"
        }
      ]
    },
    "globalVariables": {
      "name": "entity.name.variable.local.ibralogue",
      "match": "%.*%"
    },
    "choices": {
      "patterns": [
        {
          "include": "#operators"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.ibralogue",
          "match": "->(?=.*)"
        },
        {
          "name": "keyword.operator.arithmetic.ibralogue",
          "match": "^-"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.yarnspinner",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.yarnspinner",
          "match": "\\\\."
        }
      ]
    },
    "numbers": {
      "name": "constant.numeric",
      "match": "\\b([+-]?([0-9]*[.])?[0-9]+)\\b"
    }
  },

  "scopeName": "source.ibralogue"
}
